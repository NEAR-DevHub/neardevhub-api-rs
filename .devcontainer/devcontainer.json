{
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },
  "image": "mcr.microsoft.com/devcontainers/universal:focal",
  "features": {
    "ghcr.io/devcontainers/features/rust:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "github.vscode-github-actions",
        "ms-python.python"
      ]
    }
  },
  "postCreateCommand": "./.devcontainer/install-dependencies.sh"
}
